{
    "authors": [{
        "name": "Stewart Walter",
        "email": "code@phatkoala.uk"
    }],
    "repositories": [{
        "type": "composer",
        "url": "https://wpackagist.org"
    }],
    "require": {
        "php": ">=7.3",
        "composer/installers": "^1.7",
        "johnpbloch/wordpress": "^5.3",
        "vlucas/phpdotenv": "^4.0",
        "wpackagist-plugin/advanced-custom-fields": "^5.8",
        "wpackagist-plugin/ninja-forms": "^3.4",
        "wpackagist-theme/twentynineteen": "^1.4"
    },
    "require-dev": {
        "symfony/debug": "^4.4",
        "symfony/var-dumper": "^5.0",
        "wpackagist-plugin/debug-bar": "^1.0",
        "wpackagist-plugin/monkeyman-rewrite-analyzer": "^1.0"
    },
    "extra": {
        "wordpress-install-dir": "public/wordpress",
        "installer-paths": {
            "public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
